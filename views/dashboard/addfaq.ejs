<!DOCTYPE html>
<html lang="en">

<%- include('./commun/head') %>

<body>
  <script nonce="<%= nonce %>" src="assets/static/js/initTheme.js"></script>
  <div id="app">
    <%- include('./partials/sidebar') %>
    <div id="main">
      <%- include('./partials/header') %>

      <div class="page-heading">
        <div class="page-title">
          <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
              <h3>Ajouter FAQ</h3>
<!--               <p class="text-subtitle text-muted">
                Create new user account.
              </p> -->
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
              <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/dashhome">Tableau de bord</a></li>
                  <li class="breadcrumb-item active">FAQ</li>
                  <li class="breadcrumb-item active" aria-current="page">Ajouter FAQ</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>


        <section id="multiple-column-form">
          <div id="allalerts"></div>
          <div class="row match-height">
            <div class="col-12">
              <div class="card">
                <div class="card-content">
                  <div class="card-body">
                    <form id="myform" class="form" action="/allfaq/addfaq/newq" method="post" data-parsley-validate>
                      <div class="row">
                        <div class="col-12">
                          <div class="form-group mandatory">
                            <label for="title" class="form-label">Section Titre</label>
                            <input type="text" id="title" class="form-control" placeholder="Titre" name="title" data-parsley-required="true" />
                          </div>
                        </div>

                        <div class="col-12">
                          <div class="form-group mandatory">
                            <label for="question" class="form-label">Question</label>
                            <textarea class="form-control" id="question" rows="2" name="question" placeholder="Question..." data-parsley-required="true"></textarea>
                          </div>
                        </div>

                        <div class="col-12">
                          <div class="form-group  mandatory">
                            <label for="answer" class="form-label">Réponce</label>
                            <textarea class="form-control" id="answer" rows="4" placeholder="Réponce..." name="answer" data-parsley-required="true"></textarea>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-12 d-flex justify-content-end">
                          <button id="submit-button" type="submit" class="btn btn-primary me-1 mb-1">Sauvegarder</button>
                          <button id="reset-button" type="reset" class="btn btn-light-secondary me-1 mb-1">Réinitialiser</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

      </div>




      <%- include('./partials/footer') %>
    </div>
  </div>


  <%- include('./commun/scripts') %>



  <script nonce="<%= nonce %>" src="assets/extensions/parsleyjs/parsley.min.js"></script>
  <script nonce="<%= nonce %>" src="assets/static/js/pages/parsley.js"></script>
  <script nonce="<%= nonce %>" src="pages/jsaf.js"></script>


</body>

</html>