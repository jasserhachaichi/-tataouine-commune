<!DOCTYPE html>
<html lang="en">

<%- include('./commun/head') %>

<body>
  <script nonce="<%= nonce %>" src="assets/static/js/initTheme.js"></script>
  <div id="app">
    <%- include('./partials/sidebar') %>
    <div id="main">
      <%- include('./partials/header') %>

      <div class="page-heading">
        <div class="page-title">
          <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
              <h3>Ajouter un utilisateur</h3>
              <p class="text-subtitle text-muted">
                Créez un nouveau compte utilisateur.
              </p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
              <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/dashhome">Tableau de bord</a></li>
                  <li class="breadcrumb-item active">Comptes
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">Ajouter un utilisateur</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>


        <!-- // Basic multiple Column Form section start -->
        <section id="multiple-column-form">
          <div id="allalerts"></div>
          <div class="row match-height">
            <div class="col-12">
              <div class="card">
                <div class="card-content">
                  <div class="card-body">
                    <form id="myform" class="form" action="/adduser/addNewuser" method="post" data-parsley-validate>
                      <div class="row">
                        <div class="col-md-6 col-12">
                          <div class="form-group mandatory">
                            <label for="first-name-column" class="form-label">Nom</label>
                            <input type="text" id="first-name-column" class="form-control" placeholder="Nom..." name="fname-column" data-parsley-required="true" />
                          </div>
                        </div>
                        <div class="col-md-6 col-12">
                          <div class="form-group mandatory">
                            <label for="last-name-column" class="form-label">Prénom</label>
                            <input type="text" id="last-name-column" class="form-control" placeholder="Prénom..." name="lname-column" data-parsley-required="true" />
                          </div>
                        </div>


                        <div class="col-md-6 col-12">
                          <div class="form-group mandatory">
                            <label for="email-id-column" class="form-label">E-mail</label>
                            <input type="email" id="email-id-column" class="form-control" name="email-id-column" placeholder="Email..." data-parsley-trigger="change" data-parsley-required="true" />
                          </div>
                        </div>

                        <div class="col-md-6 col-12">
                          <div class="form-group mandatory">
                            <label for="password-id-column" class="form-label">Mot de passe</label>
                            <input type="text" id="password-id-column" class="form-control" name="password-id-column" placeholder="Mot de passe..." data-parsley-trigger="change" data-parsley-minlength="8" data-parsley-required="true" data-parsley-pattern="^(?=.*[0-9])(?=.*[a-zA-Z])(?=.*[@#%^&+=])[^$]{8,}$" data-parsley-error-message="Le mot de passe doit contenir au moins 8 caractères avec au moins un chiffre, une lettre et un caractère spécial @#%^&+= ." />
                          </div>
                        </div>
                        <div class="col-md-6 col-12">
                          <div class="form-group mandatory">
                            <label for="cpassword-id-column" class="form-label">Confirmez le mot de passe</label>
                            <input type="text" id="cpassword-id-column" class="form-control" name="cpassword-id-column" placeholder="Confirmez le mot de passe..." data-parsley-trigger="change" data-parsley-minlength="8" data-parsley-required="true" data-parsley-equalto="#password-id-column" data-parsley-error-message="Passwords must match." />
                          </div>
                        </div>

                      </div>
                      <div class="row">
                        <div class="col-12 d-flex justify-content-end">
                          <button id="submit-button" type="submit" class="btn btn-primary me-1 mb-1">
                            Sauvegarder
                          </button>
                          <button id="reset-button" type="reset" class="btn btn-light-secondary me-1 mb-1">
                            Réinitialiser
                          </button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- // Basic multiple Column Form section end -->
      </div>


      <!--                         <div class="alert alert-success alert-dismissible fade d-none" role="alert"><i
                                class="bi bi-check-circle"></i>User created successfully! <button type="button"
                                class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>

                        <div class="alert alert-danger alert-dismissible fade  d-none" role="alert"><i
                                class="bi bi-file-excel"></i>User not created successfully! <button type="button"
                                class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>

 -->
      <%- include('./partials/footer') %>
    </div>
  </div>


  <%- include('./commun/scripts') %>



  <script nonce="<%= nonce %>" src="assets/extensions/parsleyjs/parsley.min.js"></script>
  <script nonce="<%= nonce %>" src="assets/static/js/pages/parsley.js"></script>
  <script nonce="<%= nonce %>" src="pages/jsau.js"></script>

</body>

</html>