<script nonce="<%= nonce %>">
  // Fonction pour mettre à jour l'année
  function updateYear() {
    const currentYear = new Date().getFullYear();
    const baseYear = 2024;
    const yearText = currentYear === baseYear ? baseYear : `${baseYear}-${currentYear}`;
    document.getElementById('year-text').innerText = `${yearText}`;
  }

  // Appel de la fonction pour mettre à jour l'année lors du chargement de la page
  updateYear();
</script>