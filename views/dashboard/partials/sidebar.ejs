<script nonce="<%= nonce %>">
  const ThisactivePage = window.location.pathname;
  const sidebarLinks = document.querySelectorAll('#sidebar .sidebar-item a');

  sidebarLinks.forEach(link => {
    // Normalize the href to remove any leading slashes
    const normalizedHref = link.getAttribute('href').replace(/^\//, '');
    if (ThisactivePage.includes(normalizedHref) && ThisactivePage !== '/') {
      link.parentNode.parentNode.parentNode.classList.add('active');
    }

    if (ThisactivePage.includes(normalizedHref) && ThisactivePage !== '/' /* && ThisactivePage === '/dashhome' */ ) {
      link.parentNode.classList.add('active');
    }
  });
</script>