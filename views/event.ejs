<link href="./theme.min.css" type="text/css" rel="stylesheet" id="style-default">
<style>
  .breadcrumbs {
    padding: 15px;
  }

  .breadcrumbs__item {
    display: inline-block;
    font-size: 14px;
    font-weight: 600;
    text-transform: capitalize;
  }

  .breadcrumbs__item:last-child:after {
    display: none;
  }

  .breadcrumbs__item i {
    font-size: 14px;
  }

  .breadcrumbs__item:after {
    content: "\f105";
    font-family: FontAwesome;
    display: inline-block;
    position: relative;
    font-size: 14px;
    margin: 0 6px;
  }

  .breadcrumbs__url {
    color: #000;
  }

  .breadcrumbs__item--current {
    color: #c00;
  }
</style>


<body class="overflow-x-hidden">
  <%- include('./partials/navbar') %>
  <!--   <section class="section-3 bg-dark">
    jjjj
  </section> -->
  <section class="mt-140px ">
    <div class="container">
      <!-- Breadcrumb -->
      <ul class="breadcrumbs mb-4 text-center">
        <li class="breadcrumbs__item">
          <a class='breadcrumbs__url' href='/home'>
            <i class="fa fa-home"></i> Home</a>
        </li>
        <li class="breadcrumbs__item">
          <a class='breadcrumbs__url' href='/events'>Events</a>
        </li>
        <li class="breadcrumbs__item breadcrumbs__item--current">
          <%= event.title %>
        </li>
      </ul>
    </div>
  </section>

  <main class="main" id="top">
    <div class="container">
      <div class="content">
        <div class="pb-9">
          <h2 class="mb-4 mb-lg-6"><span class="primary-color-2"><%= event.title %></span> <%= event.type != undefined ? '(' +event.type+ ')' : '' %></h2>
          <img class="rounded w-100 mb-5 mb-md-6 mb-xl-8  fit-cover " src="<%= event.coverpath ? event.coverpath.replace(/\\/g, '/').replace('attachments/', '') : 'images/BgEvent-default.jpg' %>" alt="<%= event.title %> Cover Image" style="max-height: 500px; width: auto;">
          <div class="row gx-lg-9">
            <div class="col-xl-8 border-end-xl">
              <div class="card mb-9 fw-semibold">
                <div class="card-body">
                  <h1 class="lh-sm fs-6 fs-xxl-4 mb-2 primary-color-1">Description</h1>
                  <p class="fs-8 mb-4 ">
                    <%= event.description %>
                  </p>
                  <div class="card mb-5 mb-xxl-7">
                    <div class="card-body">
                      <div class="row gy-5">
                        <% if (event.venue || event.country || event.state || event.city) { %>
                        <div class="col-md-6 d-flex justify-content-between">
                          <div>
                            <div class="mb-3">
                              <div class="d-flex align-items-center">
                                <div class="px-2 py-1 bg-info-subtle rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-map-pin text-info">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                  </svg></div>
                                <h5 class="ms-2 text-body-emphasis mb-0">Location <%= event.participation === 'Both' ? '(Online & Onsite)' : '(' +event.participation+ ')' %></h5>
                              </div>
                            </div>
                            <p class="lh-sm mb-0 ">
                              <%= event.venue ? event.venue : '' %><%= event.country ? ', ' +  event.country : '' %><br>
                              <%= event.state ? event.state : '' %><%= event.city ? ', ' +  event.city : '' %>
                            </p>
                          </div>
                          <div class="my-4 mx-3 border-start border-translucent d-none d-md-block"></div>
                        </div>
                        <% } %>

                        <div class="col-md-6">
                          <div class="mb-3">
                            <div class="d-flex align-items-center">
                              <div class="px-2 py-1 bg-primary-subtle rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-clock text-primary">
                                  <circle cx="12" cy="12" r="10"></circle>
                                  <polyline points="12 6 12 12 16 14"></polyline>
                                </svg></div>
                              <h5 class="ms-2 mb-0">Date &amp; Time</h5>
                            </div>
                          </div>
                          <p class="lh-sm mb-0 ">
                            <%= event.startDate %> <br> <%= event.endDate ? event.endDate : '' %>
                          </p>
                        </div>

                        <% if (event.regDead) { %>
                        <div class="col-12">
                          <div class="mb-3">
                            <div class="d-flex align-items-center">
                              <div class="px-2 py-1 bg-primary-subtle rounded"><svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" fill="currentColor" class="bi bi-stickies" viewBox="0 0 16 16" class="feather feather-clock text-primary">
                                  <path d="M1.5 0A1.5 1.5 0 0 0 0 1.5V13a1 1 0 0 0 1 1V1.5a.5.5 0 0 1 .5-.5H14a1 1 0 0 0-1-1z" />
                                  <path d="M3.5 2A1.5 1.5 0 0 0 2 3.5v11A1.5 1.5 0 0 0 3.5 16h6.086a1.5 1.5 0 0 0 1.06-.44l4.915-4.914A1.5 1.5 0 0 0 16 9.586V3.5A1.5 1.5 0 0 0 14.5 2zM3 3.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 .5.5V9h-4.5A1.5 1.5 0 0 0 9 10.5V15H3.5a.5.5 0 0 1-.5-.5zm7 11.293V10.5a.5.5 0 0 1 .5-.5h4.293z" />
                                </svg></div>
                              <h5 class="ms-2 mb-0">Registration Deadline:</h5>
                            </div>
                          </div>
                          <p class="lh-sm mb-0 ">
                            <%= event.regDead ? event.regDead : '' %>
                          </p>
                        </div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <h2 class="mb-3 primary-color-1">About this event</h2>

              <div class="reset-styles">
                <%- event.summernote %>
              </div>
              <br>
              <% if (event.attachements && (event.attachements.length) > 0) { %>
                <h2 class="mb-3 primary-color-1">Attachments</h2>
                <ul>
                  <% event.attachements.forEach(function(attachment) { %>
                  <li>
                    <i class="fa-solid fa-paperclip"></i>
                    <a href="<%= attachment.path.replace('attachments\\', '') %>"><%= attachment.filename %></a>
                  </li>
                  <% }); %>
                </ul>
                <% } %>




