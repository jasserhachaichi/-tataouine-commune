              </div>
            </div>
            <div class="col-xl-4">
              <h3 class="mb-3 primary-color-1">Organized by</h3>
              <div class="row g-2 mb-3 align-items-center">
                <div class="col-sm-auto flex-1">
                  <span class="mb-0lh-sm fw-semibold ">
                    <%= event.organizers.join(', ') %>
                  </span>
                </div>
              </div>
              <div class="row g-2 mb-4 align-items-center">
                <% if (event.ologospath.length > 0) { %>
                <% event.ologospath.forEach(function(path) { %>
                <div class="col-auto"><img class="rounded img-fluid" src="<%= path.replace(/\\/g, '/').replace('attachments/', '') %>" alt="Organizer logo" width="40" height="auto"></div>
                <% }) %>
                <% } %>
              </div>



              <% if (event.sponsors && event.sponsors !=null) { %>
              <h3 class="mb-3 primary-color-1">Sponsored by</h3>
              <div class="row g-2 mb-3 align-items-center">
                <div class="col-sm-auto flex-1">
                  <span class="mb-0 lh-sm fw-semibold ">
                    <%= event.sponsors.join(', ') %>
                  </span>
                </div>
              </div>
              <% } %>


              <div class="row g-2 mb-4 align-items-center">
                <% if (event.slogospath.length > 0) { %>
                <% event.slogospath.forEach(function(path) { %>
                <div class="col-auto"><img class="rounded img-fluid" src="<%= path.replace(/\\/g, '/').replace('attachments/', '') %>" alt="Sponsor logo" width="40" height="auto"></div>
                <% }) %>
                <% } %>
              </div>





              <% if (event.tags) { %>
              <h3 class="mb-3 primary-color-1">Tags</h3>
              <div class="d-flex flex-wrap pb-7 border-bottom border-translucent">
                <% event.tags.forEach(tag=> { %>
                <span class="badge badge-tag me-2 mb-2">
                  <%= tag %>
                </span>
                <% }); %>
              </div>
              <% } %>




              <div class="row g-0 py-3 border-bottom border-dashed align-items-end justify-content-between">
                <div class="col-auto">
                  <h3 class="flex-1 mb-0 text-nowrap me-3 primary-color-1">Upcoming events</h3>
                </div>
                <div class="col-auto"><a class="fw-bold fs-9" href="/events">See more</a></div>
              </div>




              <% latestEvents.forEach(levent=> { %>
              <div class="bg-event my-4 p-3 border-bottom border-translucent border-dashed">
                <div class="d-flex flex-between-center">
                  <p class="fs-8 mb-0 fw-bold mb-1 primary-color-2">
                    <%= levent.startDate.toDateString() %> - <%= levent.endDate ? levent.endDate.toDateString() : 'Ongoing' %>
                    <span><%= levent.participation === 'Both' ? '(Online & Onsite)' : '('+levent.participation+')' %></span>
                  </p>
                </div>
                <a class="text-primary-hover text-body-highlight fw-bold mb-2 line-clamp-1 me-5 lh-base" href=" <%= levent._id %>">
                  <%= levent.title %>
                </a>
                <p class="text-body-secondary fs-9 mb-2">Organized by <br><span class="fw-bold">
                    <%= levent.organizers %>
                  </span></p>
                <% if (levent.regDead) { %>
                <p class="text-body-secondary fs-9 mb-2">Deadline Date:<br><span class="fw-bold">
                    <%= event.regDead ? event.regDead : '' %>
                  </span></p>
                <% } %>
                <p class="fs-9  fw-bold mb-1">
                  <svg class="svg-inline--fa fa-clock text-body-secondary me-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="clock" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg="">
                    <path fill="currentColor" d="M256 512C114.6 512 0 397.4 0 256C0 114.6 114.6 0 256 0C397.4 0 512 114.6 512 256C512 397.4 397.4 512 256 512zM232 256C232 264 236 271.5 242.7 275.1L338.7 339.1C349.7 347.3 364.6 344.3 371.1 333.3C379.3 322.3 376.3 307.4 365.3 300L280 243.2V120C280 106.7 269.3 96 255.1 96C242.7 96 231.1 106.7 231.1 120L232 256z">
                    </path>
                  </svg>
                  <!-- <span class="fa-solid fa-clock text-body-secondary me-1"></span> Font Awesome fontawesome.com -->
                  <%= levent.startDate.toLocaleTimeString() %>
                </p>



                <% if (levent.venue || levent.country || levent.state || levent.city) { %>
                <p class="fs-9  fw-bold mb-0">
                  <svg class="svg-inline--fa fa-location-dot text-body-secondary me-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="location-dot" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" data-fa-i2svg="">
                    <path fill="currentColor" d="M168.3 499.2C116.1 435 0 279.4 0 192C0 85.96 85.96 0 192 0C298 0 384 85.96 384 192C384 279.4 267 435 215.7 499.2C203.4 514.5 180.6 514.5 168.3 499.2H168.3zM192 256C227.3 256 256 227.3 256 192C256 156.7 227.3 128 192 128C156.7 128 128 156.7 128 192C128 227.3 156.7 256 192 256z">
                    </path>
                  </svg>
                  <%= levent.venue ? ', ' + levent.venue : '' %>
                  <%= levent.country ? ', ' + levent.country : '' %>
                  <%=levent.state ? ', ' + levent.state : '' %>
                  <%= levent.city ? ', ' + levent.city : '' %>
                </p>
                <% } %>
              </div>
              <% }); %>





            </div>
          </div>
        </div>
      </div>
    </div>





  </main>


