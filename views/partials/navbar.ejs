<script>
  document.addEventListener('DOMContentLoaded', () => {
    const activePage = window.location.pathname;
    const navLinks = document.querySelectorAll('#topnavbar .collapse a');

    navLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (href) {
        const normalizedHref = href.replace(/^\//, '');
        if (activePage.includes(normalizedHref) && activePage !== '/') {
          link.classList.add('active');
          // Check if it's a dropdown item
          if (link.classList.contains('dropdown-item')) {
            // Get the parent nav item
            const parentNavItem = link.closest('.nav-item');
            if (parentNavItem) {
              const parentNavLink = parentNavItem.querySelector('.nav-link');
              if (parentNavLink) {
                parentNavLink.classList.add('active');
              }
            }
          }
        }

      }


    });
  });
</script>